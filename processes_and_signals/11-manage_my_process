#!/usr/bin/env bash
#This (init) script is meant to manage script file: manage_my_process
mumu=$1
start() {
    sudo ./manage_my_process &
    echo "$!" > "/var/run/my_process.pid"
    echo "manage_my_process started"
}

stop() {
    sudo pkill -f "./manage_my_process" && sudo rm "/var/run/my_process.pid" && echo "manage_my_process stopped"
}

restart() {
    stop && start && echo "manage_my_process restarted"
}

case "$mumu" in
    start)
	start
	;;
    stop)
	stop
	;;
    restart)
	restart
	;;
    *)
	echo "Usage: manage_my_process {start|stop|restart}"
	;;
esac
